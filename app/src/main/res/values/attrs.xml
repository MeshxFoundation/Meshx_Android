<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TriangleView">
        <attr name="triangleColor" format="color" />
        <attr name="triangleDirection" format="integer">
            <enum name="up" value="0" />
            <enum name="down" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
        <attr name="TGStrokeWidth" format="dimension|reference" />
        <attr name="TGStrokeColor" format="color|reference" />
        <attr name="is_arrow" format="boolean" />
    </declare-styleable>


    <declare-styleable name="HomeIndicatorView">
        <attr name="hiv_src" format="reference" />
        <attr name="hiv_text" format="string" />
        <attr name="hiv_text_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ChildWrapperLinearLayout">
        <attr name="cwll_index" format="integer" />
    </declare-styleable>

</resources>