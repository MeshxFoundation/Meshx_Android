<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/setname_title"
        layout="@layout/select_seting_title" />

    <EditText
        android:id="@+id/setname_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:maxLines="1"
        android:hint="@string/setname_activity_editexthit"
        android:gravity="left"
        android:padding="@dimen/dp15"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintTop_toBottomOf="@+id/setname_title" />

    <ImageView
        android:id="@+id/setname_deletename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15"
        android:src="@mipmap/setnameactivity_shut"
        app:layout_constraintBottom_toBottomOf="@+id/setname_edt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setname_edt" />

</android.support.constraint.ConstraintLayout>

